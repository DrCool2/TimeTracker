<%= simple_form_for entry, local: true do |form| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
        <% entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :clocked_in %>
    <%= form.datetime_select :clocked_in %>
  </div>

  <div class="field">
    <%= form.label :clocked_out %>
    <%= form.datetime_select :clocked_out %>
  </div>

  <div>
    <%# form.label :user_id %>
    <%#User.all do |u| @user.push() %>
    <% @user = [] %>
    <%# User.all.each do |u| @user.push([[u.first_name, u.last_name],[u.id]]) end %>
    <%# User.all.each do |u| @user.push([[u.first_name, u.last_name],[u.id]]) end %>
    <%# User.all.each do |u| @user.push([[u.full_name],[u.id]]) end %>

    <% User.all.each do |u|
      # @user.push([[u.first_name + " " + u.last_name],[u.id].to_s])
      @user.push([u.full_name(u.id),u.id])
    end

    %>
    <%# form.input :user_id, collection: [['Scott Weinman','1'],['Shannon Weinman','2']] %>
    <%= form.input :user_id, collection: @user %>
  </div>

  <div>
    <%# form.label :task_id %>

    <% @task = [] %>
    <% Task.all.each do |t|
        @task.push([t.task_name,t.id])
      end
      %>

    <%# form.number_field :task_id %>
    <%= form.input :task_id, collection: @task %>
    <%# binding.pry %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
